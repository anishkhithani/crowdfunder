<!DOCTYPE html>
<html>
<head>
  <title>Crowdfunder</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container">
        <a class="brand" href="/">CrowdFunder</a>
        <div class="nav-collapse collapse">
          <ul class="nav">
            <li <%= yield(:li_class_hm)%>>
              <%= link_to "Home", :root %>
            </li>
            <li <%= yield(:li_class_pj)%>>
            <%= link_to 'Projects', :projects %>
            </li>
            <% if current_user %>
              <li <%= yield(:li_class_user)%>>
              <%= link_to current_user.first_name, user_path(current_user.id)%></li>
              <li> <%= link_to "Logout", session_path("current"), :method => :delete  %></li>
            <% else %>
                <li <%= yield(:li_class_sign)%>>
                  <%= link_to "Sign Up", new_user_path %></li>
                <li <%= yield(:li_class_log)%>>
                  <%= link_to "Login", new_session_path%></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
    </div>
  </div>
  <div class="page">
  <% if flash[:notice] %>
    <p class="alert"><%=flash[:notice] %></p>
  <% end %>
  <% if flash[:alert] %>
    <p class="alert"><%=flash[:alert] %></p>
  <% end %>
  <%= yield %>

</body>
</html>
